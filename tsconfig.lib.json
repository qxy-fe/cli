{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "outDir": "dist",
    "composite": true,
    "allowJs": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./packages/**/*", "./scripts/*"],
  "exclude": ["**/dist", "**/tests"]
}
