{
  "private": true,
  "workspaces": [
    "packages/qxy",
    "packages/@qxy/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "lerna run clean --stream",
    "copy": "lerna run copy --stream",
    "copy-watch": "lerna run copy --parallel -- --watch",
    "dev": "yarn copy-watch & yarn build --watch",
    "release": "yarn clean && yarn copy && yarn build && lerna publish",
    "test": "jest --runInBand"
  },
  "lint-staged": {
    "*.{json,yml,css,scss}": "prettier --write",
    "package.json": "sort-package.json"
  },
  "prettier": "@qxy/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@qxy/prettier-config": "^0.2.0",
    "@types/jest": "^26.0.22",
    "chokidar": "^3.5.1",
    "cpx2": "^3.0.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.49.0",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "prettierIgnore": [
    "node_modules",
    "/dist",
    "/static",
    "*.min.*"
  ]
}
