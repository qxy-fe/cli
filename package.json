{
  "private": true,
  "workspaces": [
    "packages/qxy",
    "packages/@qxy/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "lerna run clean --stream",
    "copy": "lerna run copy --stream",
    "copy-watch": "lerna run copy --parallel -- --watch",
    "dev": "yarn copy-watch & yarn build --watch",
    "release": "yarn clean && yarn copy && yarn build && lerna publish",
    "test": "jest --runInBand"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{json,yml,css,scss}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "@qxy/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@qxy/prettier-config": "^0.2.0",
    "@types/jest": "^27.0.1",
    "chokidar": "^3.5.2",
    "cpx2": "^3.0.2",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.50.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "prettierIgnore": [
    "node_modules",
    "/dist",
    "/static",
    "*.min.*"
  ]
}
