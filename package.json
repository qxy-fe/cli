{
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@7.21.0",
  "scripts": {
    "build": "pnpm -r --stream run build",
    "dev": "pnpm -r --parallel run dev",
    "lint": "eslint .",
    "release": "run-s release:check release:version release:publish",
    "release:check": "run-s lint typecheck clean build",
    "release:publish": "pnpm -r publish",
    "release:version": "bumpp package.json packages/*/package.json packages/@qxy/*/package.json",
    "test": "vitest --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ntnyq/eslint-config-typescript": "^1.2.1",
    "@types/node": "^18.11.18",
    "bumpp": "^8.2.1",
    "eslint": "^8.30.0",
    "husky": "^8.0.2",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.21.0",
    "rimraf": "^3.0.2",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vitest": "^0.26.2"
  },
  "nano-staged": {
    "*.{js,mjs,ts,yml,yaml,json,md}": "eslint --fix"
  }
}
