{
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@7.27.0",
  "scripts": {
    "build": "pnpm -r --stream run build",
    "dev": "pnpm -r --parallel run dev",
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "run-s release:check release:version release:publish",
    "release:check": "run-s lint typecheck clean build",
    "release:publish": "pnpm -r publish",
    "release:version": "bumpp package.json packages/*/package.json packages/@qxy/*/package.json",
    "test": "vitest --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^1.3.1",
    "@types/node": "^18.13.0",
    "bumpp": "^8.2.1",
    "eslint": "^8.34.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.27.0",
    "rimraf": "^4.1.2",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  },
  "nano-staged": {
    "*.{js,mjs,ts,yml,yaml,json,md}": "eslint --fix"
  }
}
