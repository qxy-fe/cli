{
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "clean": "pnpm -r --stream run clean",
    "copy": "pnpm -r run --stream --if-present copy",
    "copy:watch": "pnpm -r --parallel --if-present run copy:watch",
    "dev": "run-s copy:watch build:watch",
    "release": "run-s clean copy build",
    "test": "vitest --passWithNoTests",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{json,md}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "@qxy/prettier-config",
  "eslintConfig": {
    "extends": "@qxy/typescript",
    "root": true
  },
  "eslintIgnore": [
    "lib"
  ],
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@qxy/eslint-config-typescript": "^0.1.2",
    "@qxy/prettier-config": "^0.3.1",
    "chokidar": "^3.5.3",
    "cpx2": "^4.2.0",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "pnpm": "^6.32.11",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.55.0",
    "typescript": "^4.6.4",
    "vitest": "^0.10.0"
  }
}
