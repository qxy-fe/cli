{
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@7.30.5",
  "scripts": {
    "build": "pnpm -r --stream run build",
    "dev": "pnpm -r --parallel run dev",
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "run-s release:check release:version release:publish",
    "release:check": "run-s lint typecheck clean build",
    "release:publish": "pnpm -r publish",
    "release:version": "bumpp -r",
    "test": "vitest --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^1.6.1",
    "@ntnyq/prettier-config": "^1.6.1",
    "@types/node": "^18.15.10",
    "bumpp": "^9.0.0",
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^7.30.5",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2",
    "vitest": "^0.29.7"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,mjs,ts,yml,yaml,json,md}": "eslint --fix"
  }
}
